#!/bin/bash
while true; do
  response=$(curl -o /dev/null -s -w '%{http_code}|%{time_total}' "$1")
  status_code=$(echo $response | cut -d'|' -f1)
  time=$(echo $response | cut -d'|' -f2)
  timestamp=$(date '+%H:%M:%S')

  # Color codes
  GREEN='\033[0;32m'
  YELLOW='\033[1;33m'
  RED='\033[0;31m'
  BLUE='\033[0;34m'
  NC='\033[0m' # No Color

  # Choose color based on status code
  if [ "$status_code" -ge 200 ] && [ "$status_code" -lt 300 ]; then
    color=$GREEN
  elif [ "$status_code" -ge 300 ] && [ "$status_code" -lt 400 ]; then
    color=$YELLOW
  else
    color=$RED
  fi

  echo -e "${BLUE}${timestamp}${NC} - ${color}HTTP: ${status_code}${NC} | Time: ${time}s"
  sleep 0.2
done
